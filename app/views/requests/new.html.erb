<div class="request-new-wrapper">
    <div class="request-new-container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                <h2>リクエスト投稿</h2>
                <%= form_for @request do |f| %>
                <div class="form-group">
                    <%= f.label :title, class: "text-white" %>
                    <%= f.text_field :title, class: "form-conrol" %>
                </div>
                <div class="form-group">
                    <%= f.label :budget, class: "text-white" %>
                    <%= f.text_field :budget, class: "form-conrol" %>
                </div>
                <div class="form-group">
                    <%= f.label :description, class: "text-white" %>
                    <%= f.text_field :description, class: "form-conrol" %>
                </div>
             </div>       
                     
                    <table class="table table-striped table-boarded">
                        <tbody>
                            <tr>
                                <th class="text-center">product name</th>
                                <th class="text-center">amount</th>
                                <th class="text-center">unit price</th>
                                <th class="text-center">sample image</th>
                            </tr>
                        <%= f.nested_fields_for :commodities, wrapper_tag: :tr do |c| %>
                            <td>
                            <div class="form-group">
                                <%= c.text_field :product_name, class: "form-control" %>
                            </div>
                            </td>
                            <td>
                            <div class="form-group">
                                <%= c.text_field :amount, class: "form-control" %>
                            </div>
                            </td>
                            <td>
                            <div class="form-group">
                                <%= c.text_field :price, class: "form-control" %>
                            </div>
                            </td>
                            <td>
                            <div class="form-group">
                                <%= c.file_field :image %>
                            </div>
                            </td>
                            <td><%= c.remove_nested_fields_link 'Delete', class: 'btn　btn-danger', role: 'button' %></td>
                        <% end %>
                        </tbody>
                    </table>
                    <%= f.add_nested_fields_link :commodities, 'Add new', class:'btn btn-primary', role: 'button' %>
                <div class="form-group">
                    <%= f.submit "投稿", class: 'btn-block btn-white' %>
                </div>    
                <% end %>
            
        </div>
    </div>
</div>
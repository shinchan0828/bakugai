<div id="messages">
    <div class = "message-new-wrapper">
        <div class = "message-new-container">
            <div class = "row">
                <div class = "col-md-offset-4 col-md-4">
                    <%= @request.title %> 宛てにメッセージを送信
                    <%= form_for @message do |f| %>
                    <div class= "form-group">
                        <%= f.label :content %>
                        <%= f.text_field :content, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.submit "送信", class: 'btn-block btn-white' %>
                    </div> 
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="users-session-wrapper">
  <div class="users-session-container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1 class="text-center text-white">Sign In</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %><br />
            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="form-group">
            <%= f.label :password, class: 'text-white' %><br />
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>
        
          <% if devise_mapping.rememberable? -%>
            <div class="filed">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
      <%= render "devise/shared/links" %>
</div>



